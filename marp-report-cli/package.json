{
  "name": "marp-report-cli",
  "version": "0.1.0",
  "description": "CLI tool for converting Markdown to Marp Report format",
  "type": "module",
  "bin": {
    "marp-report": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -p tsconfig.json --watch",
    "cli": "node dist/cli.js",
    "demo": "./integration-example/demo-workflow.sh",
    "setup-example": "cd integration-example && npm install",
    "start-example": "cd integration-example && npm run dev",
    "test-convert": "npm run cli -- convert example.md --format json --output test-output.json",
    "example-data": "npm run cli -- convert example.md --format json --output integration-example/src/data/example-report.json"
  },
  "keywords": [
    "marp",
    "markdown",
    "report",
    "cli",
    "converter"
  ],
  "dependencies": {
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "fs-extra": "^11.1.1",
    "gray-matter": "^4.0.3",
    "mustache": "^4.2.0",
    "chokidar": "^3.5.3",
    "marp-report-core": "file:../marp-report-core",
    "@marp-team/marp-core": "^3.8.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/mustache": "^4.2.5",
    "@types/node": "^20.8.0",
    "typescript": "^5.2.2"
  }
}
